# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

target 'SalamBro' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  pod 'Alamofire'
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'SnapKit'
  pod 'Reusable'
  pod 'DropDown'
  pod 'SVProgressHUD'
  pod 'IQKeyboardManagerSwift'
  pod 'Moya/RxSwift', '~> 14.0'
  
  # Pods for Cache
  pod 'Cache'
  pod 'Imaginary'
  pod 'KeychainAccess'

  # Pods for SalamBro
  pod 'InputMask'

  # Pods for yandex-map
  pod 'YandexMapKit', '3.4'
  # Additional MapKit modules.
  pod 'YandexMapKitSearch', '3.4'

  # Pad for rate view
  pod 'Cosmos'

  # Pod for Lottie animations
  pod 'lottie-ios'

  # Pod for observing internet connection
  pod 'ReachabilitySwift'

  # Pod for Brands' animation
  pod "Spruce", '2.2.0'
  
  # Pod for payments
  pod 'Cloudpayments', :git =>  "https://github.com/cloudpayments/CloudPayments-SDK-iOS", :branch => "master", :tag => '1.1.2'
  pod 'CloudpaymentsNetworking', :git =>  "https://github.com/cloudpayments/CloudPayments-SDK-iOS", :branch => "master"

  # Firebase
  pod 'Firebase/Analytics'
  pod 'Firebase/Messaging'
  pod 'Firebase/Crashlytics'

  target 'SalamBroTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SalamBroUITests' do
    # Pods for testing
  end

end
